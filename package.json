{
  "name": "calidad-biwa-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "web": "node web-server.js",
    "dev": "node web-server.js",
    "build": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "express": "^4.18.0"
  },
  "build": {
    "appId": "com.calidad-biwa.app",
    "productName": "Visualizador BIW Calidad",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    }
  }
}
